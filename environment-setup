#Please launch cmd in administrative mode
#execute the below commands one by one

@powershell -NoProfile -ExecutionPolicy Bypass -Command "iex ((New-Object System.Net.WebClient).DownloadString('https://chocolatey.org/install.ps1'))" && SET "PATH=%PATH%;%ALLUSERSPROFILE%\chocolatey\bin"
choco install -y wget nano notepad2
choco install -y consolez cmder conemu 
choco install -y virtualbox
choco install -y vagrant
choco install -y vscode
choco install -y git --params "/GitAndUnixToolsOnPath /WindowsTerminal"
refreshenv
bash
cd ~
pwd

#please ensure bash is available, else enable disable windows subsystem and reboot

